<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = "com.example.android.justjava.MainActivity">

 <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical"
    tools:context = "com.example.android.justjava.MainActivity">

<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_marginLeft = "30dp"
    android:orientation = "vertical"
    tools:context = "com.example.android.justjava.MainActivity">

    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop="10dp"
        android:orientation = "vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="15dp"
        tools:context = "com.example.android.justjava.MainActivity">


    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "Quantity"
        android:gravity="center"
        android:textAppearance = "?android:textAppearanceSmall"
        android:textAllCaps = "true"
        android:layout_marginBottom="10dp"
        android:textSize = "16sp" />


    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:gravity="center_horizontal"
        tools:context = "com.example.android.justjava.MainActivity">

    <Button
        android:layout_width = "48dp"
        android:layout_height = "48dp"
        android:text = "+"
        android:layout_marginRight = "8dp"
        android:onClick = "increment"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "0"
        android:paddingRight = "8dp"
        android:textSize = "16sp"
        android:id = "@+id/quantity_text_view"
        android:textColor = "@android:color/black" />

    <Button
        android:text = "-"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick = "decrement" />
        </LinearLayout>

    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "40dp"
        android:gravity="center_horizontal"
        android:orientation = "vertical"
        android:layout_marginRight="40dp"
        tools:context = "com.example.android.justjava.MainActivity">

   <TextView
       android:layout_width = "wrap_content"
       android:layout_height = "wrap_content"
       android:text = "Order Summary"
       android:layout_marginTop="15dp"
       android:textAllCaps = "true"
       android:textSize = "16sp" />

        </LinearLayout>

        </LinearLayout>7

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "TOPPINGS"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textAllCaps = "true"
        android:textSize = "16sp" />

    <CheckBox
        android:id="@+id/checkbox_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whipped Cream"
        android:textSize="16sp"
        android:paddingLeft="24dp"
        android:layout_marginTop="10dp"/>


    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        tools:context = "com.example.android.justjava.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs. 0 \n\nWelcome"
            android:textSize = "13sp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/order_summary_text_view"
            android:textColor = "@android:color/black"
            android:gravity="center_horizontal" />

        <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
            xmlns:tools = "http://schemas.android.com/tools"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical"
            android:paddingRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            tools:context = "com.example.android.justjava.MainActivity">

            <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:orientation = "vertical"
                android:layout_gravity="center"
                tools:context = "com.example.android.justjava.MainActivity"></LinearLayout>

        </LinearLayout>
        </LinearLayout>

</LinearLayout>
</LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "ORDER"
            android:gravity="center_horizontal"
            android:layout_above="@+id/linear_view"
            android:id="@+id/order_button_id"
            android:onClick = "submitOrder"/>



    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear_view"
        android:gravity="center_horizontal"
        tools:context = "com.example.android.justjava.MainActivity">



    <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "RESET"
        android:id="@+id/reset_Button_id"
        android:gravity="center_horizontal"
            android:onClick = "reset"/>

    </LinearLayout>





</RelativeLayout>
